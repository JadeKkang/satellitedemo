<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MenuBt">
        <attr name="bitmap" format="reference"></attr>
        <attr name="radius" format="integer"></attr>
        <attr name="isText" format="boolean"></attr>
        <attr name="textSize" format="dimension"></attr>
        <attr name="itemSize" format="dimension"></attr>
        <attr name="textColor" format="color"></attr>
        <attr name="orientation" format="integer">
            <enum name="left_top" value="1"></enum>
            <enum name="left_bottom"  value="2"></enum>
            <enum name="right_top" value="3"></enum>
            <enum name="right_bottom" value="4"></enum>
        </attr>
    </declare-styleable>
</resources>